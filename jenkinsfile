pipeline{ 
    agent any

    tools{
        maven 'maven'
        jdk 'JDK11'

    }

environment {
    JAVA_HOME = '/path/to/java11'  
    PATH = "${JAVA_HOME}/bin:${env.PATH}"
}


    stages{
        
            stage('Build'){
                steps{
                   bat 'mvn -B -DskipTests clean package'
                   echo 'Build Completed'
                }
            }
            
            stage('Test'){
                steps{
                    bat 'mvn test'
                    echo 'Test Completed'
                }
            }


             stage('Deliver') {
                steps {
                   script { 
                          bat './scripts/deliver.sh'
                    }
                 }
        }

  
    }

}


  
 

